.signin-container
  .signin-top
    .signin-top__signup
      %p.signin-top__signup__text アカウントをお持ちでない方はこちら
      = link_to '新規会員登録','#',class: 'signin-top__signup--btn'
    .signin-top__form
      .signin-top__form__sns
        = link_to '#',class: 'signin-top__form__btn signin-top__form__sns__facebook' do
          = fa_icon 'facebook-square',class: 'signin-top__form__btn--icon signin-top__form__btn--facebook'
          = 'Facebookでログイン'
        = link_to '#',class: 'signin-top__form__btn signin-top__form__sns__google' do
          = fa_icon 'google',class: 'signin-top__form__btn--icon signin-top__form__btn--google'
          = 'Googleでログイン'
      .signin-top__form__normal
        = email_field :signin,:email, placeholder: 'メールアドレス',class: 'signin-top__form__normal--email default-input'
        = password_field :signin,:password, placeholder: 'パスワード',class: 'signin-top__form__normal--password default-input'
        = text_field :signin,:recapture, placeholder: '私はロボットではありません',class: 'signin-top__form__normal--recapture default-input',disabled: 'disabled' 
        %input.signin-top__form__btn.signin-top__form__normal--submit{type: 'submit',value: 'ログイン'} 
        = link_to 'パスワードをお忘れの方', '',class: 'signin-top__form__normal--link'