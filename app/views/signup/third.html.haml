- content_for(:html_title) {'発送・お届け先住所入力'}
= render partial: 'signup-header3'
.signup-container
  %h2.signup-header 発送元・お届け先住所入力
  .registration-form
    .signup-form-container.registration-form__first-container
      .signup-form-container__title
        = label :name, 'お名前', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      = text_field :user, :family_name, placeholder: '例）山田', class: 'default-input'
      = text_field :user, :personal_name, placeholder: '例）彩', class: 'default-input__under default-input'
    .signup-form-container
      .signup-form-container__title
        = label :name, 'お名前カナ', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      = text_field :user, :family_name_kana, placeholder: '例）ヤマダ', class: 'default-input'
      = text_field :user, :personal_name_kana, placeholder: '例）アヤ', class: 'default-input__under default-input'
    .signup-form-container
      .signup-form-container__title
        = label :postal_code, '郵便番号', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      = text_field :user, :postal_code, placeholder: '例）123-4567', class: 'default-input'
    .signup-form-container
      .signup-form-container__title
        = label :postal_code, '都道府県', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      .select-wrap.select-wrap__full
        = select :user,:prefecture,['--'],{},{class: 'default-select default-select__full'}
        %i.select-arrow.fas.fa-chevron-down
    .signup-form-container
      .signup-form-container__title
        = label :city, '市区町村', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      = text_field :user, :city, placeholder: '例）横浜市緑区', class: 'default-input'
    .signup-form-container
      .signup-form-container__title
        = label :adress, '番地', class: 'signup-label'
        %span.signup-form-container__span.span-need 必須
      = text_field :user, :adress, placeholder: '例）青山1-1-1', class: 'default-input'
    .signup-form-container
      .signup-form-container__title
        = label :building, '建物名', class: 'signup-label'
        %span.signup-form-container__span.span-optional 任意
      = text_field :user, :building, placeholder: '例）柳ビル103', class: 'default-input'
    .signup-form-container
      .signup-form-container__title
        = label :tel, '電話', class: 'signup-label'
        %span.signup-form-container__span.span-optional 任意
      = text_field :user, :tel, placeholder: '例）09012345678', class: 'default-input'
    %input.submit-btn.submit-btn-red{type: 'submit',value: '次へ進む'} 
= render partial: 'simple-footer'